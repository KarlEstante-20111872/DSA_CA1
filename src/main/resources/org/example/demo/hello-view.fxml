<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="dsa_ca1.controllers.SupermarketController">

    <!-- CENTER: Main TabPane -->
    <center>
        <TabPane fx:id="mainTabPane">

            <!-- Tab 1: Floors -->
            <Tab text="Floors">
                <VBox spacing="10" padding="10">
                    <TextField fx:id="floorNumberField" promptText="Floor number"/>
                    <Button fx:id="createFloorButton" text="Create Floor" onAction="#createFloor"/>
                </VBox>
            </Tab>

            <!-- Tab 2: Aisles -->
            <Tab text="Aisles">
                <VBox spacing="10" padding="10">
                    <ComboBox fx:id="floorComboBoxForAisle" promptText="Select Floor"/>
                    <TextField fx:id="aisleNameField" promptText="Aisle name"/>
                    <TextField fx:id="aisleLengthField" promptText="Length"/>
                    <TextField fx:id="aisleWidthField" promptText="Width"/>
                    <TextField fx:id="aisleTemperatureField" promptText="Temperature"/>
                    <Button fx:id="createAisleButton" text="Create Aisle" onAction="#createAisle"/>
                </VBox>
            </Tab>

            <!-- Tab 3: Shelves -->
            <Tab text="Shelves">
                <VBox spacing="10" padding="10">
                    <ComboBox fx:id="floorComboBoxForShelf" promptText="Select Floor"/>
                    <ComboBox fx:id="aisleComboBoxForShelf" promptText="Select Aisle"/>
                    <TextField fx:id="shelfNumberField" promptText="Shelf number"/>
                    <Button fx:id="createShelfButton" text="Create Shelf" onAction="#createShelf"/>
                </VBox>
            </Tab>

            <!-- Tab 4: Items -->
            <Tab text="Items">
                <VBox spacing="10" padding="10">
                    <ComboBox fx:id="floorComboBoxItem" promptText="Select Floor"/>
                    <ComboBox fx:id="aisleComboBoxItem" promptText="Select Aisle"/>
                    <ComboBox fx:id="shelfComboBoxItem" promptText="Select Shelf"/>
                    <TextField fx:id="itemNameField" promptText="Item name"/>
                    <TextField fx:id="unitSizeField" promptText="Unit size"/>
                    <TextField fx:id="unitPriceField" promptText="Unit price"/>
                    <TextField fx:id="quantityField" promptText="Quantity"/>
                    <TextField fx:id="storageField" promptText="Storage temperature"/>
                    <Button fx:id="smartAddButton" text="Smart Add" onAction="#smartAddItem"/>
                </VBox>
            </Tab>

            <!-- Tab 5: Operations -->
            <Tab text="Operations">
                <VBox spacing="10" padding="10">

                    <Label text="Search Item"/>
                    <TextField fx:id="searchItemNameField" promptText="Item name"/>
                    <Button fx:id="searchItemButton" text="Search" onAction="#searchItem"/>

                    <Label text="Remove Item"/>
                    <TextField fx:id="removeItemNameField" promptText="Item name"/>
                    <TextField fx:id="removeItemQuantityField" promptText="Quantity"/>
                    <TextField fx:id="removeFloorField" promptText="Floor"/>
                    <TextField fx:id="removeAisleField" promptText="Aisle"/>
                    <TextField fx:id="removeShelfField" promptText="Shelf"/>
                    <Button fx:id="removeItemButton" text="Remove Item" onAction="#removeItem"/>

                    <Label text="Other Operations"/>
                    <Button fx:id="viewStockButton" text="View Stock" onAction="#viewStock"/>
                    <Button fx:id="resetAllButton" text="Reset All" onAction="#resetSystem"/>

                </VBox>
            </Tab>

        </TabPane>
    </center>

    <!-- BOTTOM: Output area -->
    <bottom>
        <TextArea fx:id="outputArea" prefRowCount="5" editable="false" wrapText="true"/>
    </bottom>

</BorderPane>
